<!-- /templates/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= app_name %></title>
  <style>
    body {
      background-color: <%= backgroundcolor %>;
      font-family: Arial, sans-serif;
      color: #fff;
      text-align: center;
      padding: 50px;
    }
    h1 {
      font-size: 2.5em;
    }
    form {
      margin: 20px 0;
    }
    input {
      padding: 10px;
      margin: 5px;
      font-size: 1em;
    }
    button {
      padding: 10px 20px;
      font-size: 1em;
      cursor: pointer;
      background-color: #3498db;
      border: none;
      color: white;
      border-radius: 5px;
    }
    button:hover {
      background-color: #2980b9;
    }
    .status {
      margin-top: 20px;
      font-size: 1.2em;
    }
  </style>
</head>
<body>

  <h1><%= app_name %></h1>

  <form id="connect-form" action="/test" method="POST">
    <input type="text" name="host" placeholder="Enter Hostname" required><br>
    <input type="number" name="port" placeholder="Enter Port" required><br>
    <button type="submit">Test Connection</button>
  </form>

  <% if (status) { %>
    <div class="status">
      <h2>Test Results</h2>
      <p>Status: <%= status.message %></p>
    </div>
  <% } %>

</body>
</html>
